// manifest.json
{
  "manifest_version": 3,
  "name": "Mobile View Switcher",
  "version": "1.0",
  "description": "Automatically switches tabs to mobile view",
  "permissions": [
    "webNavigation",
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}