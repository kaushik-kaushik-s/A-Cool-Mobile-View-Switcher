{
  "manifest_version": 3,
  "name": "Mobile Browser Spoofer",
  "version": "1.0",
  "description": "Forces websites to show their mobile version with domain-specific settings",
  "permissions": [
    "webNavigation",
    "declarativeNetRequest",
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start"
  }]
}